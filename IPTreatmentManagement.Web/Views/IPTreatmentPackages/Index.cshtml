@model IEnumerable<IPTreatmentManagement.Models.Dtos.Response.IPTreatmentPackageResponseDto>

@{
    ViewData["Title"] = "IP Treatment Packages";
}

<h1>Treatment Packages</h1>

<table class="table table-bordered table-hover c-datatable">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentPackageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AilmentCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentDurationInDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TreatmentPackageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AilmentCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TreatmentDurationInDays)
                </td>
                <td class="d-flex flex-column">
                    @*@Html.ActionLink("Details", "Details", new { treatmentPackageName = item.TreatmentPackageName })*@
                    <a class="btn btn-outline-dark text-left text-nowrap mb-2"
                       asp-controller="IPTreatmentPackages"
                       asp-action="Details"
                       asp-route-treatmentPackageName="@item.TreatmentPackageName">
                        <i class="fab fa-lg fa-audible"></i> Details
                    </a>
                    <a class="btn btn-outline-dark text-left text-nowrap"
                       asp-controller="TreatmentPlans"
                       asp-action="Create"
                       asp-route-treatmentPackageName="@item.TreatmentPackageName">
                        <i class="fas fa-lg fa-user-injured"></i> Add Patient
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
