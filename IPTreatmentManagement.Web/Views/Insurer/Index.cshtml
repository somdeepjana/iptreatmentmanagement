@model IEnumerable<IPTreatmentManagement.Models.Dtos.Response.InsurerResponseDto>

@{
    ViewData["Title"] = "Index";
}

<h1>All Insurers</h1>

<table class="table table-bordered table-hover c-datatable">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InsurerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsurerPackageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceAmountLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisbursementDurationInDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InsurerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsurerPackageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsuranceAmountLimit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisbursementDurationInDays)
                </td>
                <td>
                    @*@Html.ActionLink("Details", "Details", new { insurerPackageName= item.InsurerPackageName })*@
                    <a class="btn btn-outline-dark"
                       asp-controller="Insurer"
                       asp-action="Details"
                       asp-route-insurerPackageName="@item.InsurerPackageName">
                        <i class="fab fa-lg fa-audible"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
