@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<ul class="navbar-nav">
    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-success">Hello @User.Claims.FirstOrDefault(i=>i.Type=="unique_name").Value!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout">
                <button type="submit" class="nav-link text-white btn btn-link btn btn-secondary">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white btn btn-info" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>